#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(int argc, char *argv[])
{ double a,b,c,e,f;
printf("enter 3 numbers:\n");
scanf("%d", &a);
scanf("%d", &b);
scanf("%d", &c);
double perimeter(double a, double b, double c)
	{
		double p;
		p=a+b+c;
		return p;
	}
double square(double a, double b, double c)
	{
		double s,p,j;
		p=(a+b+c)/2;
		j= (p*(p-a)*(p-b)*(p-c));
		s=(sqrt(j));
		return s;
	}
if (a>b+c)
	{
		e = perimeter(a, b, c);
		f = square(a, b, c);
	}
if (b>c+a)
	{
		e = perimeter(a, b, c);
		f = square(a, b, c);
	}
if (c>b+a)
	{
		e = perimeter(a, b, c);
		f = square(a, b, c);
	}
else
	{
		printf("does not satisfy the condition");
	}
printf("%d %d", e, f);
	return 0;
}
